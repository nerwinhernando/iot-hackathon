<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<div class="res-pagination">
  <button class="page-link" href="#" aria-label="Previous">
    <span aria-hidden="true">&laquo;</span>
    <span class="sr-only">Previous</span>
  </button>
  <%= form_tag reservations_index_path, style: "margin-left:1em; margin-right:1em; display:inline-block" do %>
    <%= date_field_tag :date, @date, onchange: "this.form.submit();" %>
  <% end %>
  <button class="page-link" href="#" aria-label="Next">
    <span aria-hidden="true">&raquo;</span>
    <span class="sr-only">Next</span>
  </button>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Reservation date</th>
      <th>Time start</th>
      <th>Time end</th>
      <th>Purpose</th>
      <th>No of participants</th>
      <th>Employee</th>
      <th>Meeting room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.reservation_date %></td>
        <td><%= reservation.time_start.strftime("%I:%M%p")  %></td>
        <td><%= reservation.time_end.strftime("%I:%M%p") %></td>
        <td><%= reservation.purpose %></td>
        <td><%= reservation.no_of_participants %></td>
        <td><%= reservation.employee.first_name + " " + reservation.employee.last_name %></td>
        <td><%= reservation.meeting_room.room %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Reservation', new_reservation_path %>
